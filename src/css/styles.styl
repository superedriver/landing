@font-face
  font-family Roboto
  src url(../fonts/Roboto.ttf)

body
  color $color-white
  font-family Roboto, sans-serif
  width 1600px

a,
a:visited,
a:active
  color $color-white
  text-decoration none

.-green
  color $color-green

.h2, .h3
  color #566366
  font-weight bold

.h2
  font-size 30px

.h3
  font-size 22px

.header
  position: relative;
  height: 1000px;
  overflow: hidden;

  .header-background
    position absolute

  .header-content
    padding-top 98px
    position relative
    z-index 3
    height 1000px
    display flex
    flex-direction column
    align-items center
    justify-content center

    .header-content-title
      border-bottom 2px solid $color-white
      border-top 2px solid $color-white
      box-sizing border-box
      font-size 59px
      font-weight bold
      margin-bottom 50px
      height 86px
      padding-top 6px
      text-align-last justify
      width 751px
      vertical-align middle

    .header-content-action
      background transparent
      border 2px solid $color-white
      color $color-white
      cursor pointer
      display inline-block
      font-size 16px
      font-weight bold
      height 56px
      padding-top 5px
      vertical-align middle
      width 185px

.slider-controls
  left: 1379px;
  position: absolute;
  top: 889px;
  z-index: 4;

.slide-list
  .slide-item
    position absolute
    opacity 0
    transition opacity 1s
    z-index 1

    &.current
      opacity 1
      z-index 2

.toggle-list
  align-self flex-end
  display flex
  flex-direction column
  height 50px
  justify-content space-between

  .toggle-item
    border 2px solid $color-white
    border-radius 50%
    cursor pointer
    height 6px
    width 6px

    &.current
      background-color $color-white

.toolbar
  align-items center
  background-color #252e30
  display flex
  height 70px

.toolbar-content
  content-center()
  align-items center
  display flex
  justify-content space-between

  .logo
    align-items center
    display flex
    font-size 30px
    font-weight bold

  .logo-avatar
    align-items center
    background-color #4b5456
    display flex
    justify-content center
    height 42px
    margin-right 17px
    text-align center
    width 42px

  .nav-list
    display flex
    font-size 16px
    justify-content space-between
    width 770px

    .nav-item
      font-weight bold

      &:hover
        color $color-green

#goals
  content-center()
  display flex
  justify-content space-between

  .goal-item
    margin-bottom 90px
    margin-top 92px
    width 357px

  .goal-item-name
    padding-bottom 34px

  .goal-item-description
    description()

#about-me
  background-color  #f2f2f1
  display: flex;

  .photo
    height 755px
    margin-right 100px
    overflow hidden
    width 610px

  .about-me
    color #919191
    padding-top 94px
    width: 680px

  .about-me-title {
    margin-bottom 36px
  }

  .title-head
    padding-bottom 35px

  .title-item
    description()
    padding-bottom 29px

  .about-me-content
    display flex
    flex-wrap wrap
    justify-content space-between

    .content-item
      flex-shrink 0
      margin-bottom 45px
      width 317px
      display flex

    .content-item-icon
      flex-shrink 0
      width 40px

    .description-item
      description()

    .content-item-icon
      background-position 0 2px
      background-repeat no-repeat
      margin-right 28px

    .web-design
      background-image url("../img/about-me-icons/web-design.png")

    .graphic-design
      background-image url("../img/about-me-icons/graphic-design.png")

    .online-marketing
      background-image url("../img/about-me-icons/online-marketing.png")

    .seo
      background-image url("../img/about-me-icons/seo.png")

    .description-title
      margin-bottom 15px
