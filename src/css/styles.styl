$color-white = #ffffff
$color-green = #2ecc71
$background-gray = #f2f2f1

gray-background()
  background-color $background-gray

@font-face
  font-family Roboto
  src url(../fonts/Roboto.ttf)

body
  color $color-white
  font-family Roboto, sans-serif
  min-width 1200px

a,
a:visited,
a:active
  color $color-white
  text-decoration none

.-green
  color $color-green

.button
  background transparent
  border 2px solid $color-green
  color $color-green
  cursor pointer
  display inline-block
  font-size 16px
  font-weight bold
  height 56px
  padding-top 5px
  vertical-align middle
  padding-left: 37px;
  padding-right: 37px;

.h2, .h3
  color #566366
  font-weight bold

.h2
  font-size 30px
  margin-bottom 35px

.h3
  font-size 22px
  margin-bottom 15px

.description-item
  font-size 18px
  color #919191
  line-height 1.7
  padding-bottom 29px

.centered-content
  width 100%
  max-width 1178px
  margin 0 auto

.header
  position: relative;
  height: 1000px;
  overflow: hidden;

  .header-background
    position absolute

  .header-content
    padding-top 98px
    position relative
    z-index 3
    height 1000px
    display flex
    flex-direction column
    align-items center
    justify-content center

    .header-content-title
      border-bottom 2px solid $color-white
      border-top 2px solid $color-white
      box-sizing border-box
      font-size 59px
      font-weight bold
      margin-bottom 50px
      height 86px
      padding-top 6px
      text-align-last justify
      width 751px
      vertical-align middle

    .header-content-action
      border-color $color-white
      color $color-white

.slider-controls
  left: 1379px;
  position: absolute;
  top: 889px;
  z-index: 4;

.slide-list
  .slide-item
    position absolute
    opacity 0
    transition opacity 1s
    z-index 1

    &.current
      opacity 1
      z-index 2

.toggle-list
  align-self flex-end
  display flex
  flex-direction column
  height 50px
  justify-content space-between

  .toggle-item
    border 2px solid $color-white
    border-radius 50%
    cursor pointer
    height 6px
    width 6px

    &.current
      background-color $color-white

.toolbar
  align-items center
  background-color #252e30
  display flex
  height 70px

.toolbar-content
  align-items center
  display flex
  justify-content space-between

  .logo
    align-items center
    display flex
    font-size 30px
    font-weight bold

  .logo-avatar
    align-items center
    background-color #4b5456
    display flex
    justify-content center
    height 42px
    margin-right 17px
    text-align center
    width 42px

  .nav-list
    display flex
    font-size 16px
    justify-content space-between
    width 770px

    .nav-item
      font-weight bold

      &:hover
        color $color-green

#goals
  display flex
  justify-content space-between

  .goal-item
    margin-bottom 60px
    margin-top 92px
    width 357px

#about-me
  gray-background()
  display: flex;

  .photo
    height 755px
    margin-right 100px
    overflow hidden
    width 610px

  .about-me
    color #919191
    padding-top 94px
    width: 680px

  .about-me-title
    margin-bottom 36px

  .about-me-content
    display flex
    flex-wrap wrap
    justify-content space-between

    .content-item
      flex-shrink 0
      margin-bottom 16px
      width 317px
      display flex

    .content-item-icon
      flex-shrink 0
      width 40px

    .content-item-icon
      background-position 0 2px
      background-repeat no-repeat
      margin-right 28px

    .web-design
      background-image url("../img/about-me-icons/web-design.png")

    .graphic-design
      background-image url("../img/about-me-icons/graphic-design.png")

    .online-marketing
      background-image url("../img/about-me-icons/online-marketing.png")

    .seo
      background-image url("../img/about-me-icons/seo.png")

#skills
  padding-left 210px
  padding-top 91px
  padding-bottom 66px
  display flex

  .skills-description
    width 550px
    margin-right 89px

    .contact-me
      margin-top 11px

  .skills-graphs
    margin-top 40px

  .skills-graphs-item
    margin-bottom: 34px;

  .skill-diagram-container
    gray-background()
    width 560px
    height 30px

  .skill-diagram-progress
    height 30px
    color $color-white
    background-color $color-green
    display flex
    align-items center
    justify-content flex-end
    padding-right 10px
    box-sizing border-box
    font-size 17px
    font-weight bold

    &.photoshop
      width: 519px

    &.illustrator
      width: 476px

    &.html-css
      width: 519px

    &.php-mysql
      width: 358px

#resume
  gray-background()
  display flex
  flex-direction column
  align-items center
  padding-top 95px
  padding-bottom 95px
  position relative

  &:after {
    content ''
    position absolute
    border 30px solid transparent
    border-top 20px solid $background-gray
    bottom -49px
  }

  .information
    max-width 1025px
    text-align center

  .download-resume
    margin-top 10px
    margin-bottom 5px
