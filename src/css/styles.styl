$color-white = #ffffff
$color-green = #2ecc71
$background-gray = #f2f2f1
$quote-width = 1070px

gray-background()
  background-color $background-gray

@font-face
  font-family Roboto
  src url(../fonts/Roboto.ttf)

body
  color #919191
  font-family Roboto, sans-serif
  min-width 1200px

a,
a:visited,
a:active
  color $color-white
  text-decoration none

.-green
  color $color-green

.-text-bold
  font-weight bold

.button
  background transparent
  border 2px solid $color-green
  color $color-green
  cursor pointer
  display inline-block
  font-size 16px
  font-weight bold
  height 56px
  padding-top 5px
  vertical-align middle
  padding-left: 37px;
  padding-right: 37px;

.h2, .h3
  color #566366
  font-weight bold

.h2
  font-size 30px
  margin-bottom 35px

.h3
  font-size 22px
  margin-bottom 15px

.description-item
  font-size 18px
  line-height 1.7
  padding-bottom 29px

.centered-content
  width 100%
  max-width 1178px
  margin 0 auto

.toggle-list
  display flex
  justify-content space-between

  .toggle-item
    border 2px solid $color-white
    border-radius 50%
    cursor pointer
    height 6px
    width 6px

    &.current
      background-color $color-white

.information
  max-width 1025px
  text-align center

.header
  color $color-white
  position: relative;
  height: 1000px;
  overflow: hidden;

  .header-background
    position absolute

  .header-content
    padding-top 98px
    position relative
    z-index 3
    height 1000px
    display flex
    flex-direction column
    align-items center
    justify-content center

    .header-content-title
      border-bottom 2px solid $color-white
      border-top 2px solid $color-white
      box-sizing border-box
      font-size 59px
      font-weight bold
      margin-bottom 50px
      height 86px
      padding-top 6px
      text-align-last justify
      width 751px
      vertical-align middle

    .header-content-action
      border-color $color-white
      color $color-white

  .slider-controls
    left: 1379px;
    position: absolute;
    top: 889px;
    z-index: 4;

  .toggle-list
    align-self flex-end
    flex-direction column

  .toggle-item
    margin-bottom 10px

    &:last-child
      margin-bottom 0

.slide-list
  .slide-item
    position absolute
    opacity 0
    transition opacity 1s
    z-index 1

    &.current
      opacity 1
      z-index 2

.toolbar
  align-items center
  background-color #252e30
  color $color-white
  display flex
  height 70px

.toolbar-content
  align-items center
  display flex
  justify-content space-between

  .logo
    align-items center
    display flex
    font-size 30px
    font-weight bold

  .logo-avatar
    align-items center
    background-color #4b5456
    display flex
    justify-content center
    height 42px
    margin-right 17px
    text-align center
    width 42px

  .nav-list
    display flex
    font-size 16px
    justify-content space-between
    width 770px

    .nav-item
      font-weight bold

      &:hover
        color $color-green

#goals
  display flex
  justify-content space-between

  .goal-item
    margin-bottom 60px
    margin-top 92px
    width 357px

#about-me
  gray-background()
  display: flex;

  .photo
    height 755px
    margin-right 100px
    overflow hidden
    width 610px

  .about-me
    padding-top 94px
    width 680px

  .about-me-title
    margin-bottom 36px

  .about-me-content
    display flex
    flex-wrap wrap
    justify-content space-between

    .content-item
      flex-shrink 0
      margin-bottom 16px
      width 317px
      display flex

    .content-item-icon
      flex-shrink 0
      width 40px

    .content-item-icon
      background-position 0 2px
      background-repeat no-repeat
      margin-right 28px

    .web-design
      background-image url("../img/about-me-icons/web-design.png")

    .graphic-design
      background-image url("../img/about-me-icons/graphic-design.png")

    .online-marketing
      background-image url("../img/about-me-icons/online-marketing.png")

    .seo
      background-image url("../img/about-me-icons/seo.png")

#skills
  padding-top 91px
  padding-bottom 66px
  display flex

  .skills-description
    width 550px
    margin-right 75px

    .contact-me
      margin-top 11px

  .skills-graphs
    margin-top 40px

  .skills-graphs-item
    margin-bottom: 34px;

  .skill-diagram-container
    gray-background()
    width 560px
    height 30px

  .skill-diagram-progress
    height 30px
    color $color-white
    background-color $color-green
    display flex
    align-items center
    justify-content flex-end
    padding-right 10px
    box-sizing border-box
    font-size 17px
    font-weight bold

    &.photoshop
      width: 519px

    &.illustrator
      width: 476px

    &.html-css
      width: 519px

    &.php-mysql
      width: 358px

#resume
  gray-background()
  display flex
  flex-direction column
  align-items center
  padding-top 95px
  padding-bottom 95px
  position relative

  &:after {
    content ''
    position absolute
    border 30px solid transparent
    border-top 20px solid $background-gray
    bottom -49px
  }

  .download-resume
    margin-top 10px
    margin-bottom 5px

#testimonials
  .testimonial-item
    border-bottom 1px solid #CCCCCC
    padding-bottom 27px
    padding-top 95px

    &:last-child
      border none

  .testimonial-content
    display flex
    justify-content space-between

  .testimonial
    width 555px

  .testimonial-content-description
    width 565px

  .testimonial-title
    font-size 18px

  .testimonial-level
    background-color $color-green
    color $color-white
    display inline-block

  .testimonial-description
    border-top 1px solid #CCCCCC
    padding-top 22px
    padding-bottom 63px

  .testimonial-level
    margin-top 14px
    padding 5px 10px
    margin-bottom 30px

#quotes
  gray-background()
  padding-bottom 100px
  display flex
  align-items center
  flex-direction column
  padding-top 255px
  position relative

  .quotes-slider
    display flex
    flex-direction column
    align-items center

  .quotes-slider-item
    display flex
    flex-direction column
    align-items center
    top 90px
    width $quote-width
    left: 'calc(50% - %s)' % ($quote-width/2)

  .slider-item-quote
    text-align center
    min-height 146px
    font-size 24px
    line-height 1.5
    font-style italic

  .quotes-slider-content
    margin-bottom 46px

  .slider-item-author
    font-size 18px

  .toggle-list
    flex-direction row

    .toggle-item
      margin-right 10px
      border 2px solid $color-green

      &.current
        background-color $color-green

      &:last-child
        margin-right 0

#portfolio
  display flex
  flex-direction column
  align-items center
  padding-top 95px
  margin-bottom 60px

  .portfolio-grid
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-top 60px

  .portfolio-item
    display block
    height 300px
    width 360px
    margin-bottom 40px
    position relative

    &:hover .portfolio-item-link
      display block

  .portfolio-item-link
    display none
    position absolute
    top 0
    left 0
    background rgba(46,204,113,0.75)
    height 300px
    width 360px

  .portfolio-item-icon
    position absolute
    top 130px
    left 152px
    font-size 50px

#contact-me
  background-color: #000
  height 20px

